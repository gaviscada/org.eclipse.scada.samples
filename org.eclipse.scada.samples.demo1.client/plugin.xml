   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="org.eclipse.scada.samples.demo1.client.nosession">
         <and>
            <not>
               <with
                     variable="org.eclipse.scada.core.ui.connection.login.sessionState">
                  <equals
                        value="loggedIn">
                  </equals>
               </with>
            </not>
         </and>
      </definition>
      <definition
            id="org.eclipse.scada.samples.demo1.client.hassession">
         <and>
            <with
                  variable="org.eclipse.scada.core.ui.connection.login.sessionState">
               <equals
                     value="loggedIn">
               </equals>
            </with>
         </and>
      </definition>
   </extension>
